<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Backend assets: controllers, widgets, RPC helpers -->
    <template id="warranty_management_assets_backend" name="Warranty Management Backend Assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/warranty_management/static/src/js/warranty_dashboard.js"/>
            <script type="text/javascript" src="/warranty_management/static/src/js/warranty_form_controller.js"/>
            <script type="text/javascript" src="/warranty_management/static/src/js/warranty_rpc.js"/>
            <script type="text/javascript" src="/warranty_management/static/src/js/warranty_widget.js"/>
        </xpath>
    </template>

    <!-- Frontend assets: portal/website interactions -->
    <template id="warranty_management_assets_frontend" name="Warranty Management Frontend Assets" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/warranty_management/static/src/js/warranty_portal.js"/>
        </xpath>
    </template>

</odoo>
